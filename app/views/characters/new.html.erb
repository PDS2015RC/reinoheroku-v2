<br><br><h2 class="text-center">Criar Personagem</h2><br><br><br>

<div class="container">
  <div class="row-fluid">


    <div class="col-md-7">
      <div id="canvasDiv"></div>
        <script type="text/javascript">
         prepareCanvas(document.getElementById("canvasDiv"), 490, 220, "none", "none", "none", "none");
        </script>
      </div>
    </div>

    <%= form_for(@character) do |f| %>

      <div class="col-md-5">

        <div class="field input-group">
          <span class="input-group-addon" id="basic-addon1"><%= f.label :Nome %></span>
          <%= f.text_field :name, :class => 'form-control'%>
          <br>
        </div>

        <br><br>
        <div class="row-fluid text-center">

          <div class="media">
            <div class="media-left">
              <%= image_tag  "sm_hair.png", :class =>"media-left"%>
            </div>
            <div class="media-body">
              <div id="hair_div">
                <%#= f.label :hair %>
                <%= f.radio_button :hair, 'hair', onClick: "change('hair', 'hair');", :checked => true %>
                <%= label :hair_default, 'Default'%>
                <%= f.radio_button :hair, 'hair_green', onClick: "change('hair','hair_green');" %>
                <%= label :hair_green, 'Green' %>
                <%= f.radio_button :hair, 'hair_pink', onClick: "change('hair','hair_pink');"%>
                <%= label :hair_blue, 'Pink' %>
                <%= f.radio_button :hair, 'hair_red', onClick: "change('hair','hair_red');" %>
                <%= label :hair_brown, 'Red' %>
                <%= f.radio_button :hair, 'hair_yellow', onClick: "change('hair','hair_yellow');" %>
                <%= label :hair_yellow, 'yellow' %>
              </div>
            </div>
            <hr>

            <div class="media-left">
              <%= image_tag  "sm_torso.png", :class =>"media-left"%>
            </div>
            <div class="media-body">
              <div id="shirt_div">
                <%= f.radio_button :shirt, 'torso', onClick: "change('torso', 'torso');", :checked => true %>
                <%= label :torso, 'Default'%>
                <%= f.radio_button :shirt, 'torso_blue', onClick: "change('torso','torso_blue');" %>
                <%= label :shirt_blue, 'Blue' %>
                <%= f.radio_button :shirt, 'torso_gray', onClick: "change('torso','torso_gray');"%>
                <%= label :shirt_gray, 'Gray' %>
                <%= f.radio_button :shirt, 'torso_purple', onClick: "change('torso','torso_purple');" %>
                <%= label :shirt_purple, 'Purple' %>

              </div>
            </div>
            <hr>

            <div class="media-left">
              <%= image_tag  "sm_head.png", :class =>"media-left"%>
            </div>
            <div class="media-body">
               <div id="skin_div">
                <%= f.radio_button :skin, 'default', onClick: "change('head', 'head');change('leftArm', 'leftArm');change('rightArm', 'rightArm');", :checked => true %>
                <%= label :skin, 'Default'%>
                <%= f.radio_button :skin, 'green', onClick: "change('head', 'head_green');change('leftArm', 'leftArm_green');change('rightArm', 'rightArm_green');" %>
                <%= label :skin, 'Green' %>
                <%= f.radio_button :skin, 'pink', onClick: "change('head', 'head_pink');change('leftArm', 'leftArm_pink');change('rightArm', 'rightArm_pink');"%>
                <%= label :skin, 'Pink' %>
                <%= f.radio_button :skin, 'yellow', onClick: "change('head', 'head_yellow');change('leftArm', 'leftArm_yellow');change('rightArm', 'rightArm_yellow');" %>
                <%= label :skin, 'Yellow' %>
              </div>
            </div>
            <hr>

            <div class="media-left">
              <%= image_tag  "sm_legs.png", :class =>"media-left"%>
            </div>
            <div class="media-body">
              <div id="pants">
              <%= f.radio_button :pants, 'legs', onClick: "change('legs', 'legs');", :checked => true %>
              <%= label :pants, 'Default'%>
              <%= f.radio_button :pants, 'legs_gray', onClick: "change('legs', 'legs_gray');" %>
              <%= label :pants, 'Gray' %>
              <%= f.radio_button :pants, 'legs_green', onClick: "change('legs', 'legs_green');"%>
              <%= label :skin, 'Green' %>
              </div>
            </div>

            <br><br>
            <div class="btn-group actions">
              <%= f.submit "Criar Personagem", :class=>"btn-group btn btn-info"%>
            </div>

          </div><!--media-->
        </div><!--row-->
        <br><br>
      </div>

  </div>
</div>

<section class="with_pricetable" id="pricevalue">
  <div class="container">
    <div class="">
      <div class="sc_section bg_tint_dark">
        <div class="sc_content main ">
          <h2 class="sc_title style_2 aligncenter sc_title_regular margin_bottom_small">Option</h2>
          <div class="sc_columns columnsWrap">
            <div class="sc_pricing_table columns1_4 alignCenter table_color_green margin_top_small margin_bottom_small">
              <div class="sc_pricing_columns sc_pricing_column_1">
                <ul class="columnsAnimate">
                  <li class="sc_pricing_data sc_pricing_title"><%= image_tag  "sm_hair.png", :class =>"media-left"%></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :hair, 'hair', onClick: "change('hair', 'hair');", :checked => true %><%= label :hair_default, 'Default'%></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :hair, 'hair_green', onClick: "change('hair','hair_green');" %><%= label :hair_green, 'Green' %></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :hair, 'hair_pink', onClick: "change('hair','hair_pink');"%><%= label :hair_blue, 'Pink' %></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :hair, 'hair_red', onClick: "change('hair','hair_red');" %><%= label :hair_brown, 'Red' %></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :hair, 'hair_yellow', onClick: "change('hair','hair_yellow');" %><%= label :hair_yellow, 'yellow' %></li>
                </ul>
              </div>
            </div>
            <div class="sc_pricing_table columns1_4 alignCenter table_color_blue margin_top_small margin_bottom_small">
              <div class="sc_pricing_columns sc_pricing_column_1">
                <ul class="columnsAnimate">
                  <li class="sc_pricing_data sc_pricing_title"><%= image_tag  "sm_torso.png", :class =>"media-left"%></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :shirt, 'torso', onClick: "change('torso', 'torso');", :checked => true %><%= label :torso, 'Default'%></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :shirt, 'torso_blue', onClick: "change('torso','torso_blue');" %><%= label :shirt_blue, 'Blue' %></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :shirt, 'torso_gray', onClick: "change('torso','torso_gray');"%><%= label :shirt_gray, 'Gray' %></li>
                  <li class="sc_pricing_data sc_pricing_price"><%= f.radio_button :shirt, 'torso_purple', onClick: "change('torso','torso_purple');" %><%= label :shirt_purple, 'Purple' %></li>
                </ul>
              </div>
            </div>
            <div class="sc_pricing_table columns1_4 alignCenter table_color_blue margin_top_small margin_bottom_small">
              <div class="sc_pricing_columns sc_pricing_column_1">
                <ul class="columnsAnimate">
                  <li class="sc_pricing_data sc_pricing_title">1 Mês</li>
                  <li class="sc_pricing_data sc_pricing_price">
                    <div class="sc_price_item">
                      <span class="sc_price_currency">$</span>
                      <div class="sc_price_money">20</div>
                      <div class="sc_price_info">
                        <div class="sc_price_penny">
                        </div>
                        <div class="sc_price_period">/ mês</div>
                      </div>
                    </div>
                  </li>
                  <li class="sc_pricing_data">Ganhe acesso total à plataforma durante 1 mes com esta assinatura</li>
                  <li class="sc_pricing_data sc_pricing_footer">
                    <div class="sc_button sc_button_style_global sc_button_size_big curveButton squareButton global big  ico">
                      <a href="#" class="inherit">Assinar</a>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
            <div class="sc_pricing_table columns1_4 alignCenter table_color_orange margin_top_small margin_bottom_small">
              <div class="sc_pricing_columns sc_pricing_column_1">
                <ul class="columnsAnimate">
                  <li class="sc_pricing_data sc_pricing_title">Anual</li>
                  <li class="sc_pricing_data sc_pricing_price">
                    <div class="sc_price_item">
                      <span class="sc_price_currency">$</span>
                      <div class="sc_price_money">10</div>
                      <div class="sc_price_info">
                        <div class="sc_price_penny">
                        </div>
                        <div class="sc_price_period">/ mês</div>
                      </div>
                    </div>
                  </li>
                  <li class="sc_pricing_data">Economize $120 por ano e ganhe acesso total à plataforma o ano inteiro</li>
                  <li class="sc_pricing_data sc_pricing_footer">
                    <div class="sc_button sc_button_style_global sc_button_size_big curveButton squareButton global big  ico">
                      <a href="#" class="inherit">Assinar</a>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div> <!-- /collumn swap -->
        </div>
      </div>
    </div>
  </div>
</section>

<% end %>